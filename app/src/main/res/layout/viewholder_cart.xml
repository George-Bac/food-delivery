<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginHorizontal="16dp"
  android:layout_marginVertical="10dp"
  android:elevation="3dp">

  <ImageView
    android:id="@+id/individualItemPic"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/pop_1" />

  <TextView
    android:id="@+id/itemTitleTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="16dp"
    android:text="title"
    android:textColor="@color/dark_indigo"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintStart_toEndOf="@+id/individualItemPic"
    app:layout_constraintTop_toTopOf="@+id/individualItemPic" />

  <ImageView
    android:id="@+id/itemCartMinusButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="@+id/individualItemPic"
    app:layout_constraintStart_toStartOf="@+id/itemTitleTextView"
    app:srcCompat="@drawable/minus" />

  <TextView
    android:id="@+id/numberItemTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:text="1"
    android:textColor="@color/dark_indigo"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@+id/itemCartMinusButton"
    app:layout_constraintStart_toEndOf="@+id/itemCartMinusButton"
    app:layout_constraintTop_toTopOf="@+id/itemCartMinusButton" />

  <ImageView
    android:id="@+id/itemCartPlusButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    app:layout_constraintBottom_toBottomOf="@+id/numberItemTextView"
    app:layout_constraintStart_toEndOf="@+id/numberItemTextView"
    app:layout_constraintTop_toTopOf="@+id/numberItemTextView"
    app:srcCompat="@drawable/plus" />

  <TextView
    android:id="@+id/itemFeeTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:text="0"
    android:textColor="@color/dark_indigo"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="@+id/itemTitleTextView"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/itemTitleTextView" />

  <TextView
    android:id="@+id/textView19"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="3dp"
    android:text="$"
    android:textColor="@color/orange_red"
    app:layout_constraintBottom_toBottomOf="@+id/itemFeeTextView"
    app:layout_constraintEnd_toStartOf="@+id/itemFeeTextView"
    app:layout_constraintTop_toTopOf="@+id/itemFeeTextView" />

  <TextView
    android:id="@+id/itemTotalPriceTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0"
    android:textColor="@color/dark_indigo"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@+id/itemCartPlusButton"
    app:layout_constraintEnd_toEndOf="@+id/itemFeeTextView"
    app:layout_constraintTop_toTopOf="@+id/itemCartPlusButton" />

  <TextView
    android:id="@+id/textView21"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="3dp"
    android:text="$"
    android:textColor="@color/orange_red"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="@+id/itemTotalPriceTextView"
    app:layout_constraintEnd_toStartOf="@+id/itemTotalPriceTextView"
    app:layout_constraintTop_toTopOf="@+id/itemTotalPriceTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>